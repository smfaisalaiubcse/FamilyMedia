@model FamilyMedia.DTOs.PostDTO

@{
    ViewBag.Title = "Create Post";
    Layout = "~/Views/Shared/_AfterLoginLayout.cshtml";
}

<h2>Create Post</h2>
<div class="create-post">
    <form action="/Post/CreatePost" method="post">
        @Html.AntiForgeryToken()

        <div>
            <hr />

            <div class="form-group">
                Post Title:
                <div>
                    <input type="text" name="PostTitle" />
                    <div class="text-danger">@Html.ValidationMessage("PostTitle")</div>
                </div>
            </div>

            <div class="form-group">
                Post Privacy:
                <div>
                    <select name="Privacy">
                        <option value="">Select Privacy</option>
                        <option value="Public">Public</option>
                        <option value="Friends">Friends</option>
                        <option value="OnlyMe">Only Me</option>
                    </select>
                    <div class="text-danger">@Html.ValidationMessage("Privacy")</div>
                </div>
            </div>

            <div class="form-group">
                Post Body:
                <div>
                    <textarea name="PostData"></textarea>
                    <div class="text-danger">@Html.ValidationMessage("PostData")</div>
                    
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn-create-post" />
                </div>
            </div>
        </div>
    </form>

    <div>
        <a href="/Home/Index">Back to Home</a>
    </div>

</div>
